@model GerenciadorDeTarefas.Models.Tarefa

@{
    ViewData["Title"] = "Detalhes da Tarefa";
}

<h2>@ViewData["Title"]</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>
        <dt class="col-sm-2">Concluída</dt>
        <dd class="col-sm-10">@(@Model.Concluida ? "Sim" : "Não")</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>